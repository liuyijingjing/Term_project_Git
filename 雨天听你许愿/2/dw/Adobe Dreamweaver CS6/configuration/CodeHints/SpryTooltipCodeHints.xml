<codehints xmlns:MMString="http://www.adobe.com/schemes/data/string/">
<menugroup MMString:name="codehints_spry" id="CodeHints_Spry">
  <description>
  <MMString:loadString id="codehints_spry" />
  </description>
  
  <menu pattern="Spry.Widget." casesensitive="true">
    <menuitem label="Tooltip" icon="shared/mm/images/hintClass.png" />
  </menu>	

  <function pattern="Spry.Widget.Tooltip(tooltipWidgetID, triggerID, {options})" caseSensitive="true" displayrestriction="JavaScript">
    <parammenu pattern='{,' name="options" type="optionArray" allowwhitespaceprefix="true" index="2">
      <optionparammenu pattern="closeOnTooltipLeave" label="closeOnTooltipLeave" value="closeOnTooltipLeave:" type="enumerated" icon="shared/mm/images/hintMisc.gif">
        <optionparammenuitem label="true" value="true" icon="shared/mm/images/hintMisc.gif"/>
        <optionparammenuitem label="false" value="false" icon="shared/mm/images/hintMisc.gif"/>
      </optionparammenu>
      <optionparammenu pattern="followMouse" label="followMouse" value="followMouse:" type="enumerated" icon="shared/mm/images/hintMisc.gif">
        <optionparammenuitem label="true" value="true" icon="shared/mm/images/hintMisc.gif"/>
        <optionparammenuitem label="false" value="false" icon="shared/mm/images/hintMisc.gif"/>
      </optionparammenu>	  
      <parammenuitem pattern="showDelay" label="showDelay" value="showDelay:" icon="shared/mm/images/hintMisc.gif"></parammenuitem>	  		
      <parammenuitem pattern="hideDelay" label="hideDelay" value="hideDelay:" icon="shared/mm/images/hintMisc.gif"></parammenuitem>
      <optionparammenu pattern="hoverClass" label="hoverClass" value="hoverClass:" type="cssStyle" datatype="string" icon="shared/mm/images/hintCss.gif"></optionparammenu>		
      <parammenuitem pattern="offsetX" label="offsetX" value="offsetX:" icon="shared/mm/images/hintMisc.gif"></parammenuitem>
      <parammenuitem pattern="offsetY" label="offsetY" value="offsetY:" icon="shared/mm/images/hintMisc.gif"></parammenuitem>
      <optionparammenu pattern="useEffect" label="useEffect" value="useEffect:" type="enumerated" datatype="string" icon="shared/mm/images/hintFlag.gif">
        <optionparammenuitem label="blind" value="blind" icon="shared/mm/images/hintMisc.gif"/>
        <optionparammenuitem label="fade" value="fade" icon="shared/mm/images/hintMisc.gif"/>
      </optionparammenu>	  
    </parammenu>
  </function>

  <menu classpattern="Spry.Widget.Tooltip" displayrestriction="JavaScript">
    <method pattern="validate()" icon="shared/mm/images/hintFunction.png" />
    <method pattern="reset()" icon="shared/mm/images/hintFunction.png" />
  </menu>
</menugroup>
</codehints>